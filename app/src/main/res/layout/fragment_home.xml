<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zwj.mvpdemo.mvp.live.HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:id="@+id/rl_tl_home"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorWhite">

        <com.flyco.tablayout.SlidingTabLayout
            android:id="@+id/tl_home"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@color/colorWhite"
            app:tl_indicator_color="@color/colorPrimary"
            app:tl_indicator_height="1.5dp"
            app:tl_indicator_width="14dp"
            app:tl_tab_padding="12dp"
            app:tl_tab_space_equal="true"
            app:tl_textSelectColor="@color/colorPrimary"
            app:tl_textUnselectColor="#66000000"/>

    </RelativeLayout>

    <View
        android:layout_below="@+id/rl_tl_home"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorCommonBg"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_tl_home"
        android:layout_marginTop="1dp"/>

</RelativeLayout>
